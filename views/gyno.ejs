<!DOCTYPE html>
<%- include("./snippets/timon.ejs") %>
<html lang="de-ch" data-theme="light">
    <head>
        <%- include("./snippets/head.ejs", {
            title: title,
            date: date,
            desc: desc,
            url: url,
            env: env,
            sitetype: sitetype
        }) %>
        <style type="text/css">
            .hero-img {
                object-position: top;
            }

            .blog_half {
                display: grid;
                place-items: center;
                grid-template-rows: 1fr;
                grid-template-columns: 47.5% 47.5%;
                width: 90%;
                gap: 5%;
                margin: 2.5vh 5%;
            }

            .blog_half > img {
                width: 100%;
            }

            h1.hero-title,
            p.hero-subtitle {
                color: var(--c-text-950)
            }

            h1.hero-title::after {
                background-color: var(--c-text-950);
            }
        </style>
    </head>
    <body>
        <%- include("./snippets/header.ejs") %>
        <%- include("./snippets/nav.ejs") %>
        <main>
            <%- include("./snippets/hero.ejs", {
                img_alt: "Ein Bild des Teams",
                img_path: "/img/content/gyno_hero.jpg",
                title: gyno.titel,
                subtitle: gyno.untertitel,
                cta_text: "",
                cta_link: ""
            }) %>
            <h1 class="title margin-t-5vh w1000 w1200"><%= gyno.titel %></h1>
            <p class="text"><%= gyno.abs1 %></p>
            <p class="text"><%= gyno.abs2 %></p>
            <p class="text"><%= gyno.abs3 %></p>
            <p class="blog_half">
                <img src="/img/content/gyno_1_2.jpg" alt="Das Logo von twenty4forty">
                <img src="/img/content/gyno_2.jpg" alt="Eine Ultraschall Untersuchung">
            </p>
            <p class="date">Zuletzt aktualisiert am <%= toRealDate(date) %></p>
        </main>
        <%- include("./snippets/footer.ejs", {
            origin_url: origin_url,
            js: js
        }) %>
    </body>
</html>